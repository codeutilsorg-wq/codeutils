# Cloudflare Pages Headers Configuration
# Security, caching, and performance headers

# Global security headers for all pages
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: interest-cohort=()

# HTML files - short cache (1 hour)
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# CSS files - long cache (1 year)
/css/*
  Cache-Control: public, max-age=31536000, immutable

# JavaScript files - long cache (1 year)
/js/*
  Cache-Control: public, max-age=31536000, immutable

# Images - long cache (1 year)
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Data files - medium cache (1 day)
/data/*
  Cache-Control: public, max-age=86400, must-revalidate

# Favicons - long cache (1 year)
/*.ico
  Cache-Control: public, max-age=31536000, immutable

# PNG images - long cache (1 year)
/*.png
  Cache-Control: public, max-age=31536000, immutable

# Root index - short cache
/index.html
  Cache-Control: public, max-age=1800, must-revalidate
